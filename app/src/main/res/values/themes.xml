<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BatikNusantara" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color - warm earthy tones for batik theme -->
        <item name="colorPrimary">#8D4925</item>
        <item name="colorPrimaryVariant">#5D3A1A</item>
        <item name="colorOnPrimary">#FFF8F0</item>
        <!-- Secondary brand color - complement the earthy tones -->
        <item name="colorSecondary">#A05C17</item>
        <item name="colorSecondaryVariant">#D4A76A</item>
        <item name="colorOnSecondary">#2C2418</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Action bar styling -->
        <item name="actionBarStyle">@style/Widget.BatikNusantara.ActionBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.BatikNusantara.ActionBar</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/batik_background</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Custom ActionBar style -->
    <style name="Widget.BatikNusantara.ActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">?attr/colorPrimary</item>
        <item name="titleTextStyle">@style/TextAppearance.BatikNusantara.ActionBar.Title</item>
    </style>

    <!-- ActionBar theme overlay -->
    <style name="ThemeOverlay.BatikNusantara.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
    </style>

    <!-- ActionBar title text appearance -->
    <style name="TextAppearance.BatikNusantara.ActionBar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
</resources>