<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BatikNusantara" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color - warm earthy tones for batik theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color - complement the earthy tones -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/primary</item>

        <item name="actionMenuTextColor">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.BatikNusantara" parent="Base.Theme.BatikNusantara"/>
</resources>